@{  
    Layout = null;
}

<html >
<head>
    <title></title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

</head>
<body>
    <div class="row">
        <div class="col-4 offset-3">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Login here</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Login" asp-controller="Account">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Email Address</label>
                                    <input type="text" name="Eamil" id="txtEmail" class="form-control" />
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" name="Password" id="txtPassword" class="form-control" />
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <button type="button" class="btn btn-success" id="btnLogin">Login</button>
                                </div>
                            </div>
                           

                            <div class="col-12">
                                <div class="form-group">
                                    <a href="#">Forget Password</a>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <a asp-action="SignUp" asp-controller="Account">Register new User</a>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <p id="lblmsg" ></p>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/Login.js"></script>
    </body>
</html>